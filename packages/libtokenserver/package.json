{
  "name": "libtokenserver",
  "version": "0.0.0",
  "description": "[lib] authentication/authorization token routines",
  "engines": {
    "node": ">= 13.6.0",
    "pnpm": ">= 4.8.0"
  },
  "engineStrict": true,
  "main": "cli.js",
  "bin": {
    "gen-root-keys": "./cli.js"
  },
  "scripts": {
    "lint": "eslint ./",
    "pretest": "pnpm run lint && pnpm audit",
    "test": "cross-env NODE_ENV=test NODE_DEBUG=libtokenserver nyc mocha",
    "coverage": "nyc report reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dmitry-N-Medvedev/libtoken.git"
  },
  "author": "Dmitry N. Medvedev <dmitry.medvedev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Dmitry-N-Medvedev/libtoken/issues"
  },
  "homepage": "https://github.com/Dmitry-N-Medvedev/libtoken#readme",
  "dependencies": {
    "sodium-native": "^2.4.9"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "commander": "^4.1.0",
    "coveralls": "^3.0.9",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-chai-friendly": "^0.5.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "mocha": "^7.0.0",
    "nyc": "^15.0.0"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "**/*.spec.js",
      "**/.eslintrc.js"
    ],
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80,
    "watermarks": {
      "lines": [
        80,
        95
      ],
      "functions": [
        80,
        95
      ],
      "branches": [
        80,
        95
      ],
      "statements": [
        80,
        95
      ]
    }
  },
  "mocha": {
    "allow-uncaught": true,
    "async-only": true,
    "bail": true,
    "check-leaks": true,
    "exit": true,
    "forbid-only": true,
    "forbid-pending": true,
    "slow": 50,
    "timeout": 1000,
    "color": true,
    "diff": true,
    "full-trace": true,
    "growl": true,
    "inline-diffs": true,
    "reporter": "spec",
    "no-config": true,
    "no-opts": true,
    "spec": [
      "./specs/*.js"
    ]
  }
}
